                                        <option value="CreditCard">Credit Card</option>
                                        <option value="DebitCard">Debit Card</option>
                                        <option value="MobileBank">Mobile Bank</option>
                                        <option value="QrCode">Qr Code</option>
                                    </select>
                                </div>

                                <div class="size20" style="margin-top: 3%;" id="summary">-</div>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid text-center" style="margin-top: 5%;">

                        <button type="button" class="btn btn-primary" id="size-button-2" data-bs-toggle="modal"
