                                <div class="size20" style="margin-top: 3%;">ค่าบริการ : </div>
                            </div>

                            <div class="col-xs-3 col-md-6 col-lg-6">
                                <div class="size20" style="margin-top: 3%;" id="quename">-</div>
                                <div class="size20" style="margin-top: 3%;" id="total">-</div>
                                <div class="size20" style="margin-top: 3%;" id="datequeue">-</div>
                                <div class="size20" style="margin-top: 3%;" id="hourtime">-</div>
