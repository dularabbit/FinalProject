        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


    <script>
        $(document).ready(function () {
            $("#size-button-1").click(function () {
                $("#txtName").text(function () {
                    var currentName = $(this).val();
                    if (currentName !== null && currentName !== "") {
                        $("#quename").text(currentName);
                    } else {
                        $("#quename").text("-");
                    }
                });

                $("#txtDate").text(function () {
                    var selectedDate = $(this).val();
                    if (selectedDate !== null && selectedDate !== "") {
                        var dateObj = new Date(selectedDate);
                        var formattedDate = dateObj.toLocaleDateString('th-TH', { day: 'numeric', month: 'long', year: 'numeric' });
                        $("#datequeue").text(formattedDate);
                    } else {
                        $("#datequeue").text("-");
                    }
                });

                $("#txtTotal").text(function () {
                    var currentTotal = $(this).val();
                    if (currentTotal !== null && currentTotal !== "") {
                        $("#total").text(currentTotal + " คน");
                    } else {
                        $("#total").text("-");
                    }
                });

                $("#txtHour").text(function () {
                    var currentValue = $(this).val();
                    if (!isNaN(currentValue) && currentValue > 0) {
                        var newValue = currentValue * 200;
                        $("#hourtime").text(currentValue + " ชั่วโมง");
                        $("#summary").text(newValue + " บาท");
                    } else {
                        $("#hourtime").text("-");
                        $("#summary").text("-");
                    }
                });
            });
        })
    </script>

<body style="background-color: #1C1C39; color: #fff; font-family: 'K2D', sans-serif;">
